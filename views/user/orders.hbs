<link rel='stylesheet' href='/stylesheets/orders.css' />
<section>
  
    <table class="table mt-5">
  <thead>
    <tr>
        
      <th scope="col">Date</th>
      <th>Address</th>
      <th>Pincode</th>
      <th>Mobile</th>
      <th scope="col">Amount</th>
      <th scope="col">Payment</th>
      <th>Status </th>
      
      
    </tr>
  </thead>
  <tbody>
      {{#each result}}
    <tr>
      <td>{{this.date}}</td>
      <td>{{this.address}}</td>
      <td>{{this.pincode}}</td>
      <td>{{this.mobile}}</td>
      <td>{{this.total}}</td>
      <td>{{this.paymentmethod}}</td>
      <td>{{this.status}}</td>
      <td>
         <a href="/cancel-order/{{this.id}}" class="btn btn-danger">Cancel</a>  
      </td>
      
    </tr>
    {{/each}}
    
  </tbody>
</table>
</section>